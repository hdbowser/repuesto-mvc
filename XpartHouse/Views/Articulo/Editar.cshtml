@model XpartHouse.Models.Articulo

@{
    ViewBag.Title = "Editar";
    ViewBag.inventario = "active";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="app-title">
    <div>
        <h1><i class="fa fa-pencil-square-o"></i> Editar Articulo</h1>
        <p>Edici&oacute;n de los datos del contacto</p>
    </div>
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item"><a href="#">Articulo</a></li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <form method="post" action="/Articulo/Actualizar" id="frmArticulo" data-bind="submit: actualizarArticulo">
                <div class="row">
                    @Html.HiddenFor(model => model.IdArticulo)

                    <div class="col-md-6 form-group">
                        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label2"})
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", @required="required"  } })
                    </div>
                    <div class="col-md-6 form-group">
                        @Html.LabelFor(model => model.CodigoBarras, htmlAttributes: new { @class = "control-label2" })
                        @Html.EditorFor(model => model.CodigoBarras, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-6 form-group">
                        @Html.LabelFor(model => model.Costo, htmlAttributes: new { @class = "control-label2" })
                        @Html.EditorFor(model => model.Costo, new { htmlAttributes = new { @class = "form-control", @required="required" } })

                    </div>
                    <div class="col-md-6 form-group">
                        @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "control-label2" })
                        @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                    <div class="col-md-6 form-group">
                        @Html.LabelFor(model => model.LineaRoja, htmlAttributes: new { @class = "control-label2" })
                        @Html.EditorFor(model => model.LineaRoja, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                    <div class="col-md-6 form-group">
                        @Html.LabelFor(model => model.Existencia, htmlAttributes: new { @class = "control-label2" })
                        @Html.EditorFor(model => model.Existencia, new { htmlAttributes = new { @class = "form-control" } })
   
                    </div>
                    <div class="col-md-6 form-group">
                        @Html.LabelFor(model => model.Unidad, htmlAttributes: new { @class = "control-label2" })
                        @Html.EditorFor(model => model.Unidad, new { htmlAttributes = new { @class = "form-control" } })
   
                    </div>
                    <div class="col-md-6 form-group">
                        @Html.LabelFor(model => model.IdFamilia, "IdFamilia", htmlAttributes: new { @class = "control-label2" })
                        @Html.DropDownList("IdFamilia", null, htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="form-group col-12 mt-3">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/articulo/editar.js"></script>
}

