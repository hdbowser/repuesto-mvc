@{
    ViewBag.Title = "Articulos";
    ViewBag.inventario = "active";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-title">
    <div>
        <h1><i class="fa fa-user"></i> Articulos</h1>
        <p>Busqueda y creaci&oacute;n de articulos</p>
    </div>
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item"><a href="#">Articulos</a></li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="row">
                <div class="col-md-6">
                    <input data-bind="textInput: busqueda" class="form-control" placeholder="Busqueda" id="txtBusqueda" />
                </div>
                <div class="col-md-6 mt-2 mt-md-0">
                    <button class="btn btn-success ml-2" data-toggle="modal" data-target="#modalRegistroArticulo">Nuevo</button>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-12 table-responsive mt-4">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Descripci&oacute;n</th>
                                <th>Existencia</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: articulos">
                            <tr>
                                <td data-bind="text: Descripcion"></td>
                                <td data-bind="text: Existencia"></td>
                                <td><a data-bind="attr:{href: '/Articulo/Editar/'+ IdArticulo}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<!--MODALES-->
<div class="modal fade" id="modalRegistroArticulo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Registro de Articulo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form data-bind="submit: crearArticulo" id="frmArticulo">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Descripci&oacute;n</label>
                            <input type="text" class="form-control" required name="Descripcion" />
                        </div>
                        <div class="form-group col-md-6">
                            <label>C&oacute;digo de barras</label>
                            <input type="text" class="form-control" name="CodigoBarras" />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Costo</label>
                            <input type="number" class="form-control" required name="Costo" />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Precio</label>
                            <input type="number" class="form-control" name="Precio" />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Minimo de existencia</label>
                            <input type="number" class="form-control" name="LineaRoja" />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Existencia</label>
                            <input type="number" class="form-control" name="Existencia" />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Unidad</label>
                            <input type="text" class="form-control" name="Unidad" />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Familia</label>
                            <select required class="form-control" name="IdFamilia" data-bind="options: familias, optionsCaption: '- Seleccionar -', optionsValue: 'IdFamilia', optionsText: 'Nombre'">
                                <!-- Contenido generado por JavaScript -->
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer row">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Crear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/articulo/index.js?v1.0"></script>
}