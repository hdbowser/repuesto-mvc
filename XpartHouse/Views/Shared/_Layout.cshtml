    <meta name="description" content="Vali is a responsive and free admin theme built with Bootstrap 4, SASS and PUG.js. It's fully customizable and modular.">
    <!-- Open Graph Meta-->
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Vali Admin">
    <meta property="og:title" content="Vali - Free Bootstrap 4 admin theme">
    <meta property="og:url" content="http://pratikborsadiya.in/blog/vali-admin">
    <meta property="og:image" content="http://pratikborsadiya.in/blog/vali-admin/hero-social.png">
    <meta property="og:description" content="Vali is a responsive and free admin theme built with Bootstrap 4, SASS and PUG.js. It's fully customizable and modular.">
    <title>@ViewBag.title</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Main CSS-->
    <link rel="stylesheet" type="text/css" href="~/Themes/Vali/css/main.css">
    <!-- Font-icon css-->
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.min.css">
    <style>
        .hover-cursor {
            cursor: pointer;
        }
    </style>
</head>
<body class="app sidebar-mini">
    <!-- Navbar-->
    <header class="app-header">
        <a class="app-header__logo" href="index.html">XParts House</a>
        <!-- Sidebar toggle button--><a class="app-sidebar__toggle" href="#" data-toggle="sidebar" aria-label="Hide Sidebar"></a>
        <!-- Navbar Right Menu-->
        <ul class="app-nav">

            <!-- User Menu-->
            <li class="dropdown">
                <a class="app-nav__item" href="#" data-toggle="dropdown" aria-label="Open Profile Menu"><i class="fa fa-user fa-lg"></i></a>
                <ul class="dropdown-menu settings-menu dropdown-menu-right">
                    <li><a class="dropdown-item" href="page-user.html"><i class="fa fa-cog fa-lg"></i> Settings</a></li>
                    <li><a class="dropdown-item" href="page-user.html"><i class="fa fa-user fa-lg"></i> Profile</a></li>
                    <li><a class="dropdown-item" href="/Authorization/Logout"><i class="fa fa-sign-out fa-lg"></i> Cerrar sesion </a></li>
                </ul>
            </li>
        </ul>
    </header>
    <!-- Sidebar menu-->
    <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
    <aside class="app-sidebar">
        <div class="app-sidebar__user">
            <img class="app-sidebar__user-avatar" style="width: 40px" src="~/images/user.png" alt="User Image">
            <div>
                <p class="app-sidebar__user-name">@ViewBag.usuario.Nombre</p>
                <p class="app-sidebar__user-designation">@ViewBag.usuario.Rol.Nombre</p>
            </div>
        </div>
        <ul class="app-menu">
            <li><a class="app-menu__item @ViewBag.home" href="/Home/Index"><i class="app-menu__icon fa fa-dashboard"></i><span class="app-menu__label">Dashboard</span></a></li>
            <li><a class="app-menu__item @ViewBag.compra" href="/Compra/Index"><i class="app-menu__icon fa fa-shopping-basket"></i><span class="app-menu__label">Compras</span></a></li>
            <li><a class="app-menu__item @ViewBag.contacto" href="/Contacto/Index"><i class="app-menu__icon fa fa-address-book"></i><span class="app-menu__label">Contactos</span></a></li>
            <li><a class="app-menu__item @ViewBag.usuarios" href="/Usuario/Index"><i class="app-menu__icon fa fa-user"></i><span class="app-menu__label">Usuarios</span></a></li>
            
            <li class="treeview">
                <a class="app-menu__item @ViewBag.inventario" href="#" data-toggle="treeview"><i class="app-menu__icon fa fa-th-large"></i><span class="app-menu__label">Inventario</span><i class="treeview-indicator fa fa-angle-right"></i></a>
                <ul class="treeview-menu">
                    <li><a class="treeview-item" href="/Articulo/Index"><i class="icon fa fa-circle-o"></i> Articulos</a></li>
                    <li><a class="treeview-item" href="/Familia/Index" rel="noopener"><i class="icon fa fa-circle-o"></i> Familias</a></li>
                </ul>
            </li>
        </ul>
    </aside>
    <main class="app-content">
        @RenderBody()
    </main>

    <script src="~/Themes/Vali/js/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/knockout-3.5.1.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Themes/Vali/js/popper.min.js"></script>
    <script src="~/Themes/Vali/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Themes/Vali/js/plugins/bootstrap-notify.min.js"></script>
    <script type="text/javascript" src="~/Themes/Vali/js/plugins/sweetalert.min.js"></script>
    <script src="~/Themes/Vali/js/plugins/pace.min.js"></script>
    <script src="~/Themes/Vali/js/main.js"></script>

    @*
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    *@

    @RenderSection("scripts", required: false)
</body>
</html>

